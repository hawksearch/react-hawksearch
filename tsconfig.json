{
	"compilerOptions": {
		"noEmit": true,
		"pretty": true,
		"baseUrl": "./src", // all paths are relative to the baseUrl
		"outDir": "./dist",
		"module": "commonjs",
		"target": "esnext",
		"lib": ["es7", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "./src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},

	"exclude": [
		"node_modules",
		"dist",
		"webpack.config.ts",
		"babel.config.js",
		"jest.config.js",
		"jest.init.js",
		"rollup.config.js"
	]
}
